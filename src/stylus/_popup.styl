$popupButtonDim = 1.7em
.popup
  background: $grayLight
  position: relative
  max-width: 400px
  margin: auto
  @media (min-width: 401px)
    position: relative
  header
    background: $redDark
    height: $popupButtonDim
    font-size: 1.5em
  .content
    padding: {2 + $popupButtonDim * 2 / 5} 2em 3em
  hr
    margin: 2em 0
  p
    margin: 5px 0
  small
    font-size: 0.7em
  ul
    list-style: disc
    padding-left: 20px
    margin: 10px 0
    li
      margin: 5px
      a
        display: inline-block
        padding: 5px
  .mfp-close
    @extend .icon
    @extend .icon-close
    border-radius(50%)
    background: $grayLight
    position: absolute
    top: ($popupButtonDim * 3 / 5)
    left: 0
    right: 0
    display: inline-block
    margin: auto
    padding: 5px
    opacity: 1
    text-align: center
    font-size: 1em
    line-height: ($popupButtonDim * 0.8)
    width: $popupButtonDim
    height: $popupButtonDim
    cursor: pointer
    &:hover
      color: $redDark
      background: $grayBackground
.popup-cont
  &.mfp-bg
    transition(opacity 0.15s ease-in-out)
    opacity: 0
    &.mfp-ready
      opacity: 0.8
    &.mfp-removing
      opacity: 0
  &.mfp-wrap
    .mfp-container
      transform(translateY(100%))
      transition(transform 500ms cubic-bezier(0.68, -0.03, 0.04, 1.49))
    &.mfp-ready
      .mfp-container
        transform(translateY(0))
    &.mfp-removing
      .mfp-container
        transform(translateY(100%))
