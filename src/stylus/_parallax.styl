parallax_group()
  position: relative
  width: 100%
  height: 100%
  transform-style preserve-3d

foreground()

body
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  perspective 1px
  overflow-x: hidden
  overflow-y: auto
.parallax-group
  parallax_group()
.background
  transform translateZ(-1px) scale(2)
  height: 120%
  width: 100%
  position: absolute
  top: calc(50% - 50vh)
  left: 0
  object-fit cover
.foreground
  foreground()

body.no-parallax
  position: initial
  .parallax-group:not(.main)
    position: absolute
    top: 0
  .background
    transform none
    height: 100%
    top: 0
    left: 0

.no-parallax #cover .main
  position: relative
